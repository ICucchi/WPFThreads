<Window x:Class="WPFThreads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFThreads"
        mc:Ignorable="d"
        Title="cucchi.iacopo.4i.WPFThreads" WindowStartupLocation="CenterOwner"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="100" Background="Green" Click="StartButton_Click"></Button>
            <Button Width="100" Background="Red"></Button>
        </StackPanel>
        
        <StackPanel Grid.Row="1">
        <TextBlock x:Name="CounterTextBlock" FontSize="50" Background="Azure"></TextBlock>
        <TextBlock x:Name="Counter1TextBlock" FontSize="50" Background="Azure"></TextBlock>
        <TextBlock x:Name="Counter2TextBlock" FontSize="50" Background="Azure"></TextBlock>
        <TextBlock x:Name="TotalCounterTextBlock" FontSize="50" Background="Azure"></TextBlock>
        <TextBlock x:Name="StartButton" FontSize="50"></TextBlock>

        </StackPanel>
    </Grid>
</Window>
